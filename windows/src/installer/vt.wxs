<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?include properties.wxi ?>

  <Fragment>
    <ComponentGroup Id="VTComponentGroup" Directory="VTFOLDER">
      <Component Id="VTBATComponent" Guid="*" Win64="$(var.Win64)">
	<File Id="VTBAT" Name="vt.bat" DiskId="1" Source="$(var.VTDir)\vt.bat" KeyPath="yes" />
      </Component>
      <Component Id="ShellSHComponent" Guid="*" Win64="$(var.Win64)">
	<File Id="ShellSH" Name="shell.sh" DiskId="1" Source="$(var.VTDir)\shell.sh" KeyPath="yes" />
      </Component>
      <Component Id="ShellCSHComponent" Guid="*" Win64="$(var.Win64)">
	<File Id="ShellCSH" Name="shell.csh" DiskId="1" Source="$(var.VTDir)\shell.csh" KeyPath="yes" />
      </Component>
      <Component Id="JoeWinPtyComponent" Guid="*" Win64="$(var.Win64)">
	<File Id="JoeWinPtyEXE" Name="joewinpty.exe" DiskId="1" Source="$(var.VTDir)\joewinpty.exe" KeyPath="yes" />
      </Component>
    </ComponentGroup>
  </Fragment>
</Wix>